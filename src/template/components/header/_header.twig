{% set menuItems = ['About Us', 'Our Brand', 'Career'] %}

<header class="bg-transparent p-4 py-10 fixed top-0 left-0 w-screen z-50 all-surfaces-header">
	<div class="container mx-auto flex justify-between items-center">
		<nav class="flex items-center space-x-4 gap-20">
			<img src="./assets/img/logo/all-surfaces-logo.svg" alt="" class="w-auto h-[52px]">
			<div class="gap-14 hidden xl:flex">
				{% for menuItem in menuItems %}
					<a href="#" class="text-white uppercase hover:text-primary-accent transition-all">
						{{ menuItem }}
					</a>
				{% endfor %}
			</div>
		</nav>
		<div class="items-center gap-10 hidden xl:flex">
			<a href="" class="text-white uppercase hover:text-text-primary-accent transition-all">
				Contact us
			</a>
			<button class="bg-primary-accent hover:bg-dark-primary-accent text-white font-bold py-2 px-6 -skew-x-[25deg]">
				<div class="flex gap-3 skew-x-[25deg] uppercase text-black font-bold">
                    <img src="./assets/img/icon/navigator.svg" alt="">
					Find a location
				</div>
			</button>
		</div>
		<div class="block xl:hidden">
			<img src="./assets/img/icon/hamburger.svg" alt="" srcset="" class="text-white">
		</div>
	</div>
</header>
